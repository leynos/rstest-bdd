{
  // Ignore MD013 (line length) inside tables since reflowing
  // Markdown tables often breaks formatting and readability.
  "config": {
    "MD013": {
      "line_length": 80,
      "code_block_line_length": 120,
      "tables": false,
      "headings": false
    },
    "MD029": {
      "style": "ordered"
    }
  },
  "ignores": [
    "**/.venv/**",
    "**/node_modules/**",
    "./target/**"
  ]
}
